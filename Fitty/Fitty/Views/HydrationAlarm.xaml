<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fitty.Views.HydrationAlarm">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Choose an interval:" Margin="0,0,0,10" />
            <Picker x:Name="intervalPicker" SelectedIndexChanged="OnIntervalPickerSelectedIndexChanged">
                <Picker.Items>
                    <x:String>5</x:String>
                    <x:String>10</x:String>
                    <x:String>15</x:String>
                    <x:String>20</x:String>
                    <x:String>30</x:String>
                </Picker.Items>
            </Picker>
            <Button x:Name="startButton" Text="Start" Clicked="OnStartButtonClicked" Margin="0,20,0,10" />
            <Button x:Name="resetButton" Text="Reset" Clicked="OnResetButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>